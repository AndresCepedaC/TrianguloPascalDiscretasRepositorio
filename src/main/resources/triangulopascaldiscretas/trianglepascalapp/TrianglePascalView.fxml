<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="triangulopascaldiscretas.trianglepascalapp.controller.TrianglePascal2Controller">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <children>
       <TextField fx:id="numField" promptText="Ingrese el número de filas">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </TextField>
       <Button onAction="#handleGenerateButton" text="Generar Triángulo">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Button>
       <TableView fx:id="tableView" />
   </children>
</VBox>
