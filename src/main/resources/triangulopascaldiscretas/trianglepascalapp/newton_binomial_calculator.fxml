<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="triangulopascaldiscretas.trianglepascalapp.controller.NewtonBinomialAppController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <children>
   
       <Label text="Valor de a:" GridPane.columnIndex="0" GridPane.rowIndex="0">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
       <TextField fx:id="inputA" GridPane.columnIndex="1" GridPane.rowIndex="0">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </TextField>
   
       <Label text="Valor de b:" GridPane.columnIndex="0" GridPane.rowIndex="1">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
       <TextField fx:id="inputB" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </TextField>
   
   
       <Button onAction="#handleCalculateButtonAction" text="Calcular" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Button>
   
       <Label text="Resultado:" GridPane.columnIndex="0" GridPane.rowIndex="3">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
       <Label fx:id="result" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
